<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan>Category</th>
          <th>Products</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      
      <% @categories.each {|category| %>
      <tr>
        <td>
          <p> <%= category.name %> </p>
        </td>
        <td>
        <% puts @products %>
        <p> <%= category.products.length %> </p>
      </td>
      </tr>
      <%}%>


      </tbody>
    </table>

  </div>

</section>
